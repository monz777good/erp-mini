generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SALES
  ADMIN
}

enum OrderStatus {
  REQUESTED
  APPROVED
  REJECTED
  DONE
}

model User {
  id        String   @id @default(cuid())
  name      String
  phone     String   @unique
  role      Role     @default(SALES)
  createdAt DateTime @default(now())

  orders    Order[]
}

model Item {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  orders    Order[]
}

model Client {
  id           String   @id @default(cuid())
  name         String
  bizRegNo     String?  @unique
  receiverName String?
  receiverAddr String?
  receiverTel  String?
  receiverMob  String?
  memo         String?
  createdAt    DateTime @default(now())

  orders       Order[]
}

model Order {
  id          String      @id @default(cuid())
  quantity    Int
  status      OrderStatus @default(REQUESTED)
  note        String?
  createdAt   DateTime    @default(now())

  userId      String
  user        User        @relation(fields: [userId], references: [id])

  itemId      String
  item        Item        @relation(fields: [itemId], references: [id])

  clientId    String?
  client      Client?     @relation(fields: [clientId], references: [id])

  receiverName String
  receiverAddr String
  receiverTel  String?
  receiverMob  String?
  boxCount     Int        @default(1)
  shippingFee  Int        @default(3850)
  message      String?
}